# DuckBug Production Environment Variables
# Copy this file to .env.production and fill in the values

# Docker Configuration
COMPOSE_PROJECT_NAME=duckbug
REGISTRY=ghcr.io/duckbugio/duckbug
IMAGE_TAG=latest

# Domain Configuration
DOMAIN=duckbug.io
ACME_EMAIL=admin@duckbug.io

# Database Configuration
POSTGRES_DB=duckbug
POSTGRES_USER=duckbug
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgres://duckbug:your_secure_password_here@postgres:5432/duckbug?sslmode=disable

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random

# API Configuration
API_PORT=8080

# Frontend Configuration
REACT_APP_API_BASE_URL=https://api.duckbug.io

# Optional: External Services
# SENTRY_DSN=your_sentry_dsn_here
# SMTP_HOST=smtp.your-provider.com
# SMTP_PORT=587
# SMTP_USER=your_email@domain.com
# SMTP_PASSWORD=your_email_password
# SMTP_FROM=noreply@duckbug.io
